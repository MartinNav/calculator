{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "calculator",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "calculator",
        "width": 800,
        "height": 750
      }
    ],
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "bundle": {
      "active": true,
      "targets": ["deb"],
      "identifier": "hrdza.calculator",
      "publisher": "hrdza team",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png"
      ],
      "category":"Productivity",
      "shortDescription":"Jednoduchá kalkulačka napsaná v rustu.",
      "longDescription": "Tato kalkulačka podporuje operace jako je sčítání, odčítání, násobení, dělení, faktoriál, a výpočet procent z celku."
    }
  }
}
